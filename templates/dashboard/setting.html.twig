{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
     <h1 class="pt-3 pb-3">Settings</h1>
     
    {% for flashMessage in app.flashes('success') %}
          <div class="alert alert-success" role="alert">{{ flashMessage }}</div>
    {% endfor %}
    
    {{ form_start(settingForm) }}
        {% if app.user.googleAuthenticatorSecret == null %}
            {{ form_widget(settingForm.googleAuthenticatorSecret) }}
        {% else %}
            {{ form_widget(settingForm.googleAuthenticatorSecret, { 'attr': {'checked': 'checked'} }) }}
        {% endif %}
        <div class="form-group row pt-3">
            <div class="col-sm-10">
                <button class="btn btn-primary">Save</button>
            </div>
        </div>

    {{ form_end(settingForm) }}
{% endblock %}
