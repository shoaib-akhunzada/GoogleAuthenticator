{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="col-md-7 mx-auto border border-light p-5 mt-5">
       <p class="h4 mb-4 text-center">Login</p>

        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ flashMessage }}</div>
        {% endfor %}
    
        {{ form_start(loginForm) }}
            <div class="pb-2">{{ form_errors(loginForm.username) }}</div>
            {{ form_widget(loginForm.username, {'attr': {'class': 'mb-4'}}) }}

            {{ form_widget(loginForm.password, {'attr': {'class': 'mb-4'}}) }}

            <div class="d-flex justify-content-around">
                <div>
                    <!-- Remember me -->
                    <div class="custom-control custom-checkbox">
                        {{ form_widget(loginForm.remember_me) }}
                        {{ form_label(loginForm.remember_me) }}
                    </div>
                </div>
                <div>
                   
                    <a href="{{ path('app_forgot_password_request') }}">Forgot your password</a>
                </div>
            </div>

            <button class="btn btn-info btn-block my-4" type="submit">Login</button>
            
            <p> Not a member? <a href="{{ path('register') }}">Register</a> </p>
            
        </form>
    </div>

{% endblock %}
